<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/actionTitle"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/face_image_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/back"
            android:layout_marginTop="30dp"
            />
        <TextView
            android:id="@+id/bug_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="人脸图像"
            android:textColor="#ffffff"
            android:textSize="19sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/add_face_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/plus1"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <LinearLayout
            android:id="@+id/face_all"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/face_all_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="全部"
                android:gravity="center"
                android:textColor="@color/actionTitle"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"/>
            <View
                android:id="@+id/face_all_border"
                android:layout_width="50dp"
                android:layout_height="4dp"
                android:background="@color/actionTitle"
                ></View>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/face_wait_use"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/face_wait_use_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="未启用"
                android:gravity="center"
                android:textColor="#666666"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"/>
            <View
                android:id="@+id/face_wait_use_border"
                android:layout_width="70dp"
                android:layout_height="4dp"
                ></View>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/face_use"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/face_use_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="已启用"
                android:gravity="center"
                android:textColor="#666666"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"/>
            <View
                android:id="@+id/face_use_border"
                android:layout_width="70dp"
                android:layout_height="4dp"
                ></View>

        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/face_image_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>
</LinearLayout>