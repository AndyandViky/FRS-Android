<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/actionTitle"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/info_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/back"
            android:layout_marginTop="30dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="消息中心"
            android:textColor="#ffffff"
            android:textSize="19sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <LinearLayout
            android:id="@+id/info_all"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/info_all_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="全部"
                android:gravity="center"
                android:textColor="@color/actionTitle"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"/>
            <View
                android:id="@+id/info_all_border"
                android:layout_width="50dp"
                android:layout_height="4dp"
                android:background="@color/actionTitle"
                ></View>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/info_wait_read"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/info_wait_read_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="未读"
                android:gravity="center"
                android:textColor="#666666"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"/>
            <View
                android:id="@+id/info_wait_read_border"
                android:layout_width="70dp"
                android:layout_height="4dp"
                ></View>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/info_read"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/info_read_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="已读"
                android:gravity="center"
                android:textColor="#666666"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"/>
            <View
                android:id="@+id/info_read_border"
                android:layout_width="70dp"
                android:layout_height="4dp"
                ></View>

        </LinearLayout>
    </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/info_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="10dp"
                >

            </android.support.v7.widget.RecyclerView>
            <TextView
                android:id="@+id/info_more_button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="点击查看更多"
                android:layout_alignParentBottom="true"
                android:textColor="#333333"
                android:gravity="center"
                />
        </RelativeLayout>
</LinearLayout>